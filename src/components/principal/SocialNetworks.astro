---
const { theme, mobileHidden } = Astro.props

const socialNetworks = [
	{
		name: 'Facebook',
		icon: '/logos/social/facebook.svg',
		href: 'https://facebook.com/loxi1'
	}
]
---

<div class={`gap-4 justify-center ${mobileHidden ? 'hidden md:flex' : 'flex'}`}>
	{
		socialNetworks.map(({ href, icon, name }) => (
			<a
				href={href}
				target='_blank'
				rel='noopener norefferer'
				class={`w-11 h-11 flex items-center justify-center rounded-full transition-all duration-500 bg-white [&>img]:hover:scale-125 [&>img]:hover:invert-0 [&>img]:hover:brightness-100`}
			>
				<img
					class={`w-5 transition-all duration-500 invert-0 brightness-0 aspect-square`}
					src={icon}
					alt={`${name} Logo`}
					width="20"
					height="20"
					loading='lazy'
					decoding='async'
					fetchpriority='low'
				/>
			</a>
		))
	}
</div>
