---
import Layout from "@layouts/Layout.astro";
import Banner from "@components/principal/Banner.astro";
import Contenedor from "@components/principal/Contenedor.astro";

---
<script src="https://cdn.jsdelivr.net/npm/party-js@latest/bundle/party.min.js"></script>
<Layout title="Gracias" desc="Nos contáctamos a la brevedad posible">

    <section id="conffeti" onmousedown="party.confetti(this)" class="con_ffeti text-white body-font bg-principal">
        <div class="container mx-auto flex flex-col px-5 py-24 justify-center items-center">
            <img class="lg:w-2/6 md:w-3/6 w-5/6 mb-10 object-cover object-center rounded hover:scale-125" alt="hero" src="/logos/acme-logo-gracias.svg">
            <div class="w-full md:w-2/3 flex flex-col mb-16 items-center text-center">
                <h1 class="title-font sm:text-4xl text-3xl mb-4 font-medium">Gracias por su mensaje</h1>
                <p class="mb-8 leading-relaxed text-lg">Gracias por su mensaje. Esta información me ayudará a elaborar un presupuesto más rapido. Me pondre en contánctao con usted a la brevedad posible.</p>
            </div>
        </div>        
    </section>

</Layout>

<script>
    document.querySelector(".con_ffeti").addEventListener("click", function (e) {    
        party.confetti(e, {
            count: party.variation.range(20, 100).skew(2, 1),
        });
    });
</script>